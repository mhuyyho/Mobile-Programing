<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FE8E4D"/> <!-- lighter disabled -->
            <corners android:radius="30dp"/>  <!-- pill -->
            <stroke android:width="1dp" android:color="#BDBDBD"/>
        </shape>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D74F00"/> <!-- darker pressed -->
            <corners android:radius="30dp"/>
            <stroke android:width="1dp" android:color="#B24A00"/>
        </shape>
    </item>

    <!-- Default (base color you requested: #FD5D00) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FD5D00"/>
            <corners android:radius="30dp"/>
            <stroke android:width="1dp" android:color="#D74F00"/>
        </shape>
    </item>

</selector>